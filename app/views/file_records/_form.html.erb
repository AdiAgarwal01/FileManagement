<h1 class="page-title">New File Upload</h1>

<div class="form-container">
  <%= form_with(model: file_record) do |form| %>
    <% if file_record.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(file_record.errors.count, "error") %> prohibited this file from being saved:</h2>
        <ul>
          <% file_record.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, "Title" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :file, "Choose File" %>
      <%= form.file_field :file, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Upload File", class: "btn-submit" %>
    </div>
  <% end %>
</div>

<div class="back-link">
  <%= link_to "Back to file uploads", file_records_path %>
</div>
