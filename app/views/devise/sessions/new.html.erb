<div class="login-container">
  <div class="login-form">
    <h3>Sign In</h3>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Username" %>
        <%= f.email_field :email, autofocus: true, class: "form-control input-field" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control input-field" %>
      </div>


      <div class="actions">
        <%= f.submit "Sign In", class: "btn-submit" %>
      </div>
    <% end %>
  </div>

  <div class="welcome-section">
    <h2>Welcome to FileManager</h2>
    <p>Don't have an account?</p>
    <%= link_to "Sign Up", new_registration_path(resource_name), class: "btn-signup" %>
  </div>
</div>
